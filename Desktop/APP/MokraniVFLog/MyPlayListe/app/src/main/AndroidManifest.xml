<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.esiea.myloginapp">
    <!-- add camera permession -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLoginApp">
        <activity android:name="fr.esiea.myloginapp.UpdateDeleteSongActivity"></activity>
        <activity android:name="fr.esiea.myloginapp.NewSongActivity" />
        <activity android:name="fr.esiea.myloginapp.SongListActivity" />
        <activity android:name="fr.esiea.myloginapp.SignUpActivity" />
        <activity android:name="fr.esiea.myloginapp.AccountActivity" />
        <activity android:name="fr.esiea.myloginapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>